     var villageSelect;var wardSelect;
     document.getElementById('p_village').addEventListener('change', function() {
       wardSelect = document.getElementById('p_ward');
       villageSelect = this.value;
       setWard(wardSelect,villageSelect);
     });
     document.getElementById('c_village').addEventListener('change', function() {
       wardSelect = document.getElementById('c_ward');
       villageSelect = this.value;
       setWard(wardSelect,villageSelect);
     });

     function setWard(wardSelect, vil){
       const villageWardMapping = {
         1: [1, 2, 3],
         2: [4, 5, 6, 7],
         3: [8, 9, 10],
         4: [11, 12, 13, 14]
       };


       const selectedVillage = vil;
       console.log("selectedVillage : " + selectedVillage);
       // Clear the existing ward dropdown options
       wardSelect.innerHTML = '<option value="">Select Ward</option>';

       if (selectedVillage) {
         // Get the wards for the selected village
        const wards = villageWardMapping[selectedVillage];
        console.log("wards : " + wards);
        // Populate the ward dropdown
        wards.forEach(ward => {
          const option = document.createElement('option');
          option.value = ward;
          option.textContent = 'Ward ' + ward;
          wardSelect.appendChild(option);
        });
      }
    }
